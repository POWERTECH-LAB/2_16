<?xml version="1.0" encoding="UTF-8"?>
<esper-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.espertech.com/schema/esper"
    xsi:schemaLocation="http://www.espertech.com/schema/esper http://www.espertech.com/schema/esper/esper-configuration-3-0.xsd">

    <event-type name="RawTick" class="com.algoTrader.vo.RawTickVO"/>
    <event-type name="BarVO" class="com.algoTrader.vo.BarVO"/>
    <event-type name="Tick" class="com.algoTrader.entity.marketData.TickImpl"/>
    <event-type name="Bar" class="com.algoTrader.entity.marketData.BarImpl"/>
    <event-type name="Bid" class="com.algoTrader.entity.marketData.BidImpl"/>
    <event-type name="Ask" class="com.algoTrader.entity.marketData.AskImpl"/>
    <event-type name="Trade" class="com.algoTrader.entity.marketData.TradeImpl"/>
    <event-type name="Transaction" class="com.algoTrader.entity.TransactionImpl"/>
    <event-type name="OHLCTick" class="com.espertech.esper.ohlc.OHLCTick"/>

    <event-type name="MonthlyPerformance" class="com.algoTrader.vo.MonthlyPerformanceVO"/>
    <event-type name="PerformanceKeys" class="com.algoTrader.vo.PerformanceKeysVO"/>
    <event-type name="MaxDrawDown" class="com.algoTrader.vo.MaxDrawDownVO"/>
    <event-type name="TradePerformance" class="com.algoTrader.vo.TradePerformanceVO"/>
    <event-type name="AllTrades" class="com.algoTrader.vo.TradesVO"/>
    <event-type name="WinningTrades" class="com.algoTrader.vo.TradesVO"/>
    <event-type name="LoosingTrades" class="com.algoTrader.vo.TradesVO"/>

    <auto-import import-name="com.algoTrader.enumeration.TransactionType"/>
    <auto-import import-name="com.algoTrader.stockOption.StockOptionUtil"/>
    <auto-import import-name="com.algoTrader.future.FutureUtil"/>
    <auto-import import-name="com.algoTrader.util.LookupUtil"/>
    <auto-import import-name="com.algoTrader.util.RoundUtil"/>
    <auto-import import-name="com.algoTrader.util.DrawDownUtil"/>

    <auto-import import-name="java.lang.*"/>
    <auto-import import-name="java.math.*"/>
    <auto-import import-name="java.text.*"/>
    <auto-import import-name="java.util.*"/>

    <plugin-view factory-class="com.espertech.esper.ohlc.OHLCBarPlugInViewFactory" name="ohlcbar" namespace="custom"/>

    <plugin-aggregation-function name="talib" function-class="com.algoTrader.util.GenericTALibFunction"/>

    <variable name="simulation" type="boolean"/>
    <variable name="simulation_eventsPerDay" type="long"/>
    <variable name="marketIntrest" type="double"/>

    <variable name="engineStrategy" type="com.algoTrader.entity.Strategy"/>

    <plugin-loader name="EsperJMX" class-name="com.espertech.esper.jmx.client.EsperJMXPlugin">
        <init-arg name="use-platform-mbean-server" value="true" />
    </plugin-loader>

