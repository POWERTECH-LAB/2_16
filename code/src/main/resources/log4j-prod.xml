<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration>

    <appender name="DEBUG" class="org.apache.log4j.FileAppender">
        <param name="file" value="log/debug-${strategyName}.log" />
        <param name="append" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c{1} %m %n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="DEBUG" />
            <param name="LevelMax" value="FATAL" />
        </filter>
    </appender>

    <appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="log/algoTrader-${strategyName}.log" />
        <param name="datePattern" value="'.'yyyy-MM-dd" />
        <param name="append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c{1} %m %n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="INFO" />
            <param name="LevelMax" value="FATAL" />
        </filter>
    </appender>

    <appender name="PORTFOLIO" class="org.apache.log4j.FileAppender">
        <param name="file" value="log/portfolio.csv" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss},%m %n" />
        </layout>
    </appender>

    <appender name="INDICATOR" class="org.apache.log4j.FileAppender">
        <param name="file" value="log/indicator.csv" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m %n" />
        </layout>
    </appender>

    <appender name="EMAIL" class="org.apache.log4j.net.SMTPAppender">
        <param name="SMTPHost" value="smtp.mail.yahoo.com" />
        <param name="SMTPUsername" value="andy_flury" />
        <param name="SMTPPassword" value="franklin91" />
        <param name="From" value="andy_flury@yahoo.com" />
        <param name="To" value="algo-trader-server@googlegroups.com" />
        <param name="Subject" value="AlgoTrader Error ${environment}" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d%n%n%-5p%n%n%c%n%n%m%n%n" />
        </layout>
    </appender>

    <appender name="SMS" class="com.algoTrader.util.SMSAppender">
        <param name="SMTPHost" value="smtp.mail.yahoo.com" />
        <param name="SMTPUsername" value="andy_flury" />
        <param name="SMTPPassword" value="franklin91" />
        <param name="From" value="andy_flury@yahoo.com" />
        <param name="To" value="0794080420@sms.mail2sms.ch" />
        <param name="Subject" value="" />
        <param name="TimeFrame" value="60" />
        <param name="MaxEMails" value="3" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value=" " />
        </layout>
    </appender>

    <appender name="TRANSACTION_EMAIL" class="org.apache.log4j.net.SMTPAppender">
        <param name="EvaluatorClass" value="com.algoTrader.util.CustomEvaluator" />
        <param name="SMTPHost" value="smtp.mail.yahoo.com" />
        <param name="SMTPUsername" value="andy_flury" />
        <param name="SMTPPassword" value="franklin91" />
        <param name="From" value="andy_flury@yahoo.com" />
        <param name="To" value="algo-trader-server@googlegroups.com" />
        <param name="Subject" value="AlgoTrader Transaction ${environment}" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d%n%n%-5p%n%n%c%n%n%m%n%n" />
        </layout>
    </appender>

    <appender name="TRANSACTION_SMS" class="com.algoTrader.util.SMSAppender">
        <param name="EvaluatorClass" value="com.algoTrader.util.CustomEvaluator" />
        <param name="SMTPHost" value="smtp.mail.yahoo.com" />
        <param name="SMTPUsername" value="andy_flury" />
        <param name="SMTPPassword" value="franklin91" />
        <param name="From" value="andy_flury@yahoo.com" />
        <param name="To" value="0794080420@sms.mail2sms.ch" />
        <param name="Subject" value="" />
        <param name="TimeFrame" value="60" />
        <param name="MaxEMails" value="3" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m" />
        </layout>
    </appender>

    <logger name="org.springframework">
        <level value="warn" />
    </logger>

    <logger name="org.hibernate">
        <level value="warn" />
    </logger>

    <!-- logs error messages that are also logged by HibernateInterceptor -->
    <logger name="org.hibernate.event.def.AbstractFlushingEventListener">
        <level value="FATAL"/>
    </logger>

    <!-- logs error messages that are also logged by HibernateInterceptor -->
    <logger name="org.hibernate.util.JDBCExceptionReporter">
        <level value="FATAL"/>
    </logger>

    <logger name="org.apache.commons">
        <level value="warn" />
    </logger>

    <logger name="net.sf.ehcache">
        <level value="warn" />
    </logger>

    <logger name="com.espertech">
        <level value="warn" />
    </logger>

    <logger name="httpclient">
        <level value="warn" />
    </logger>

    <logger name="org.apache.activemq">
        <level value="warn" />
    </logger>

    <logger name="org.mortbay">
        <level value="warn" />
    </logger>

    <logger name="com.mchange.v2">
        <level value="warn" />
    </logger>

    <logger name="org.apache.log4j.jmx">
        <level value="warn" />
    </logger>

    <logger name="org.hibernate.engine.StatefulPersistenceContext.ProxyWarnLog">
        <level value="error" />
    </logger>

    <logger name="org.springframework.beans.factory.support.DisposableBeanAdapter">
        <level value="error" />
    </logger>

    <logger name="com.espertech.esper.util.MethodResolver">
        <level value="error" />
    </logger>

    <logger name="com.algoTrader.service.TransactionServiceImpl.MAIL" additivity="false">
        <appender-ref ref="TRANSACTION_EMAIL" />
        <appender-ref ref="TRANSACTION_SMS" />
    </logger>

    <logger name="com.algoTrader.esper.subscriber.PrintPortfolioValueSubscriber" additivity="false">
        <level value="info" />
        <appender-ref ref="PORTFOLIO" />
    </logger>

    <logger name="com.algoTrader.esper.listener.IndicatorListener" additivity="false">
        <level value="info" />
        <appender-ref ref="INDICATOR" />
    </logger>

    <root>
        <level value="debug" />
        <appender-ref ref="DEBUG" />
        <appender-ref ref="FILE" />
        <appender-ref ref="EMAIL" />
        <appender-ref ref="SMS" />
    </root>

    <categoryFactory class="com.algoTrader.util.MyLoggerFactory" />

</log4j:configuration>
