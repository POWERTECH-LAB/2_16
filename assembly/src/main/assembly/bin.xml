<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${user.dir}</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>LICENSE.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${user.dir}/common/src/main/resources/</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>conf.properties</include>
                <include>log4j2.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${user.dir}/core/src/main/resources/</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>conf-core.properties</include>
                <include>conf-ib.properties</include>
                <include>conf-bb.properties</include>
                <include>fix-template.cfg</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${user.dir}/client/bin/</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>client.bat</include>
                <include>client-ssl.bat</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${user.dir}/core/bin/</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>run.bat</include>
                <include>run-prod.sh</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <includes>
                <include>*:jar</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>