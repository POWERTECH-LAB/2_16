<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <!-- ============================= Properties Management ============================================ -->

    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>

    <bean id="properties" class="com.algoTrader.util.spring.SystemPropertiesFactoryBean">
        <property name="locations">
            <list>
                <!--  defining conf.properties will allow overwrites by strategies -->
                <!--  files have to be defined in a subdirectory of classloader root otherwise they cannot be loaded from jars -->
                <value>classpath:/META-INF/conf.properties</value>
                <value>classpath*:/META-INF/conf-**.properties</value>
            </list>
        </property>
        <property name="systemPropertiesModeName"><value>SYSTEM_PROPERTIES_MODE_OVERRIDE</value></property>
    </bean>

    <!--  PropertyPlaceholderConfigurer to overwrite settings form commandline -->
    <bean id="propertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="properties" ref="properties" />
        <property name="systemPropertiesModeName"><value>SYSTEM_PROPERTIES_MODE_NEVER</value></property>
    </bean>

    <bean id="configuration" class="com.algoTrader.util.spring.Configuration"/>

    <bean class="com.algoTrader.util.spring.EntityAnnotationSetter" init-method="init"/>

    <!-- =========================================== JMX ================================================ -->

    <bean id="exporter" class="org.springframework.jmx.export.annotation.AnnotationMBeanExporter"/>

   <!-- Diagrams for Management Service (and PropertyConfiguratet for java.util.Date)-->
    <bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
        <property name="propertyEditorRegistrars">
            <list>
               <bean class="com.algoTrader.util.spring.DatePropertyEditorRegistrar"/>
            </list>
        </property>
    </bean>

    <!-- ================================= Portfolio Chart Definition======================================= -->

    <bean id="portfolioChartDefinition" class="com.algoTrader.vo.ChartDefinitionVO" p:timePeriod="MINUTE" p:startTime="${misc.portfolioStartHour}:00" p:endTime="${misc.portfolioEndHour}:00" >
        <property name="axisDefinitions">
            <set>
                <bean class="com.algoTrader.vo.AxisDefinitionVO" p:label="Balances" p:autoRange="true" p:autoRangeIncludesZero="false">
                    <property name="datasetDefinitions">
                        <set>
                            <bean class="com.algoTrader.vo.DatasetDefinitionVO" p:type="TIME">
                                <property name="seriesDefinitions">
                                    <set>
                                        <bean class="com.algoTrader.vo.IndicatorDefinitionVO" p:name="netLiqValue" p:label="NetLiqValue" p:color="RED" p:selected="false" />
                                        <bean class="com.algoTrader.vo.IndicatorDefinitionVO" p:name="securitiesCurrentValue" p:label="SecuritiesCurrentValue" p:color="BLUE" p:selected="false" />
                                        <bean class="com.algoTrader.vo.IndicatorDefinitionVO" p:name="cashBalance" p:label="CashBalance" p:color="GREEN" p:selected="false" />
                                        <bean class="com.algoTrader.vo.IndicatorDefinitionVO" p:name="maintenanceMargin" p:label="MaintenanceMargin" p:color="YELLOW" p:selected="false" />
                                    </set>
                                </property>
                            </bean>
                        </set>
                    </property>
                </bean>
                <bean class="com.algoTrader.vo.AxisDefinitionVO" p:label="Performance / Leverage / Allocation" p:autoRange="true" p:autoRangeIncludesZero="false" p:numberFormat="##0.00%">
                    <property name="datasetDefinitions">
                        <set>
                            <bean class="com.algoTrader.vo.DatasetDefinitionVO" p:type="TIME">
                                <property name="seriesDefinitions">
                                    <set>
                                        <bean class="com.algoTrader.vo.IndicatorDefinitionVO" p:name="performance" p:label="Performance" p:color="BLACK" p:selected="true" />
                                        <bean class="com.algoTrader.vo.IndicatorDefinitionVO" p:name="leverage" p:label="Leverage" p:color="DARK_GRAY" p:selected="false" />
                                        <bean class="com.algoTrader.vo.IndicatorDefinitionVO" p:name="allocation" p:label="Allocation" p:color="LIGHT_GRAY" p:selected="false" />
                                    </set>
                                </property>
                            </bean>
                        </set>
                    </property>
                </bean>
            </set>
        </property>
    </bean>

</beans>
