<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration>

    <appender name="DEBUG" class="org.apache.log4j.FileAppender">
        <param name="file" value="log/debug-${strategyName}.log" />
        <param name="append" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c{1} %m %n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="TRACE" />
            <param name="LevelMax" value="FATAL" />
        </filter>
    </appender>

    <appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="log/algoTrader-${strategyName}.log" />
        <param name="datePattern" value="'.'yyyy-MM-dd" />
        <param name="append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c{1} %m %n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="INFO" />
            <param name="LevelMax" value="FATAL" />
        </filter>
    </appender>

    <appender name="ASYNC_ERROR_AND_SMS" class="org.apache.log4j.AsyncAppender">
        <appender-ref ref="ERROR" />
        <appender-ref ref="SMS" />
    </appender>

    <appender name="ERROR" class="org.apache.log4j.net.SMTPAppender">
        <param name="SMTPHost" value="mail.linardcapital.com" />
        <param name="SMTPPort" value="587" />
        <param name="SMTPUsername" value="aws" />
        <param name="SMTPPassword" value="Zermatt11" />
        <param name="From" value="aws@linardcapital.com" />
        <param name="To" value="errors@linardcapital.com" />
        <param name="Subject" value="AlgoTrader Error ${environment}" />
        <param name="bufferSize" value="20" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d%n%n%-5p%n%n%c%n%n%m%n%n" />
        </layout>
    </appender>

    <appender name="SMS" class="com.algoTrader.util.SMSAppender">
        <param name="SMTPHost" value="mail.linardcapital.com" />
        <param name="SMTPPort" value="587" />
        <param name="SMTPUsername" value="aws" />
        <param name="SMTPPassword" value="Zermatt11" />
        <param name="From" value="aws@linardcapital.com" />
        <param name="To" value="sms@linardcapital.com" />
        <param name="Subject" value="" />
        <param name="TimeFrame" value="60" />
        <param name="MaxEMails" value="5" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m" />
        </layout>
    </appender>

    <appender name="ASYNC_TRADE" class="org.apache.log4j.AsyncAppender">
        <appender-ref ref="TRADE" />
    </appender>

    <appender name="TRADE" class="org.apache.log4j.net.SMTPAppender">
        <param name="EvaluatorClass" value="com.algoTrader.util.CustomEvaluator" />
        <param name="SMTPHost" value="mail.linardcapital.com" />
        <param name="SMTPPort" value="587" />
        <param name="SMTPUsername" value="aws" />
        <param name="SMTPPassword" value="Zermatt11" />
        <param name="From" value="aws@linardcapital.com" />
        <param name="To" value="trades@linardcapital.com" />
        <param name="Subject" value="AlgoTrader Transaction ${environment}" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d%n%n%-5p%n%n%c%n%n%m%n%n" />
        </layout>
    </appender>

    <appender name="ASYNC_NOTIFICATION" class="org.apache.log4j.AsyncAppender">
        <appender-ref ref="NOTIFICATION" />
    </appender>

    <appender name="NOTIFICATION" class="org.apache.log4j.net.SMTPAppender">
        <param name="EvaluatorClass" value="com.algoTrader.util.CustomEvaluator" />
        <param name="SMTPHost" value="mail.linardcapital.com" />
        <param name="SMTPPort" value="587" />
        <param name="SMTPUsername" value="aws" />
        <param name="SMTPPassword" value="Zermatt11" />
        <param name="From" value="aws@linardcapital.com" />
        <param name="To" value="notifications@linardcapital.com" />
        <param name="Subject" value="AlgoTrader Notification ${environment}" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d%n%n%-5p%n%n%c%n%n%m%n%n" />
        </layout>
    </appender>

    <logger name="org.springframework">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.beans.factory.support.DisposableBeanAdapter">
        <level value="error" />
    </logger>

    <logger name="org.springframework.ws.transport">
        <level value="debug"/>
    </logger>

    <logger name="org.hibernate">
        <level value="warn" />
    </logger>

    <!-- logs error messages that are also logged by HibernateInterceptor -->
    <logger name="org.hibernate.event.def.AbstractFlushingEventListener">
        <level value="fatal"/>
    </logger>

    <!-- logs error messages that are also logged by HibernateInterceptor -->
    <logger name="org.hibernate.util.JDBCExceptionReporter">
        <level value="fatal"/>
    </logger>

    <logger name="org.hibernate.engine.StatefulPersistenceContext.ProxyWarnLog">
        <level value="error" />
    </logger>

    <logger name="org.apache.commons">
        <level value="warn" />
    </logger>

    <logger name="net.sf.ehcache">
        <level value="warn" />
    </logger>

    <logger name="com.espertech">
        <level value="warn" />
    </logger>

    <logger name="com.espertech.esper.util.MethodResolver">
        <level value="error" />
    </logger>

    <logger name="httpclient">
        <level value="warn" />
    </logger>

    <logger name="org.apache.activemq">
        <level value="warn" />
    </logger>

    <logger name="org.mortbay">
        <level value="warn" />
    </logger>

    <logger name="com.mchange.v2">
        <level value="warn" />
    </logger>

    <logger name="org.apache.log4j.jmx">
        <level value="warn" />
    </logger>

    <logger name="quickfix">
        <level value="warn" />
    </logger>

    <logger name="com.algoTrader.util.spring">
        <level value="warn" />
    </logger>

    <logger name="com.algoTrader.service.TransactionServiceImpl.MAIL">
        <appender-ref ref="ASYNC_TRADE" />
    </logger>

    <logger name="com.algoTrader.service.NOTIFICATION">
        <appender-ref ref="ASYNC_NOTIFICATION" />
    </logger>

    <root>
        <level value="debug" />
        <appender-ref ref="DEBUG" />
        <appender-ref ref="FILE" />
        <appender-ref ref="ASYNC_ERROR_AND_SMS" />
    </root>

    <categoryFactory class="com.algoTrader.util.MyLoggerFactory" />

</log4j:configuration>
