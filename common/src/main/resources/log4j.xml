<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration>

    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p [%t] [%c{1}] %m %n" />
<!--            <param name="ConversionPattern" value="%m" />-->
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="TRACE" />
            <param name="LevelMax" value="WARN" />
        </filter>
    </appender>

    <appender name="STDERR" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.err" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p [%t] [%c{1}] %m %n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="ERROR" />
            <param name="LevelMax" value="FATAL" />
        </filter>
    </appender>

    <appender name="SOCKET" class="org.apache.log4j.net.SocketAppender">
        <param name="RemoteHost" value="localhost" />
    </appender>

    <logger name="org.springframework">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.beans.factory.support.DisposableBeanAdapter">
        <level value="error" />
    </logger>

    <logger name="org.hibernate">
        <level value="warn" />
    </logger>

    <!-- logs error messages that are also logged by HibernateInterceptor -->
    <logger name="org.hibernate.event.def.AbstractFlushingEventListener">
        <level value="fatal"/>
    </logger>

    <!-- logs error messages that are also logged by HibernateInterceptor -->
    <logger name="org.hibernate.util.JDBCExceptionReporter">
        <level value="fatal"/>
    </logger>

    <logger name="org.hibernate.engine.StatefulPersistenceContext.ProxyWarnLog">
        <level value="error" />
    </logger>

    <!-- Logs warnings when inserting position / cash balance records through native SQL -->
    <logger name="org.hibernate.cache.ReadWriteCache">
        <level value="error" />
    </logger>

    <logger name="org.apache.commons">
        <level value="warn" />
    </logger>

    <logger name="net.sf.ehcache">
        <level value="warn" />
    </logger>

    <logger name="com.espertech">
        <level value="warn" />
    </logger>

    <logger name="com.espertech.esper.util.MethodResolver">
        <level value="error" />
    </logger>

    <logger name="httpclient">
        <level value="warn" />
    </logger>

    <logger name="org.apache.http">
        <level value="warn" />
    </logger>

    <logger name="org.apache.activemq">
        <level value="warn" />
    </logger>

    <logger name="org.mortbay">
        <level value="warn" />
    </logger>

    <logger name="com.mchange.v2">
        <level value="warn" />
    </logger>

    <logger name="org.apache.log4j.jmx">
        <level value="warn" />
    </logger>

    <logger name="quickfix">
        <level value="warn" />
    </logger>

    <logger name="quickfixj">
        <level value="warn" />
    </logger>

    <logger name="ch.algotrader.util.spring">
        <level value="warn" />
    </logger>

    <logger name="com.jcraft.jsch">
        <level value="warn"/>
    </logger>

    <logger name="ch.algotrader.service.SimulationServiceImpl.RESULT" >
        <level value="info" />
<!--         <appender-ref ref="SOCKET" /> -->
    </logger>

    <root>
        <level value="debug" />
        <appender-ref ref="STDOUT" />
        <appender-ref ref="STDERR" />
    </root>

    <categoryFactory class="ch.algotrader.util.MyLoggerFactory" />

</log4j:configuration>
