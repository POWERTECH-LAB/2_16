<?xml version="1.0" encoding="UTF-8"?>
<esper-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.espertech.com/schema/esper"
    xsi:schemaLocation="http://www.espertech.com/schema/esper http://www.espertech.com/schema/esper/esper-configuration-3-0.xsd">

    <event-type name="Tick" class="com.algoTrader.entity.TickImpl"/>
    <event-type name="Transaction" class="com.algoTrader.entity.TransactionImpl"/>
    <event-type name="PrearrangedOrder" class="com.algoTrader.entity.OrderImpl"/>

    <event-type name="KFast" class="com.algoTrader.entity.KFastImpl"/>
    <event-type name="ExitValue" class="com.algoTrader.entity.ExitValueImpl"/>
    <event-type name="KSlow" class="com.algoTrader.entity.KSlowImpl"/>
    <event-type name="DSlow" class="com.algoTrader.entity.DSlowImpl"/>
    <event-type name="MonthlyPerformance" class="com.algoTrader.entity.MonthlyPerformanceImpl"/>

    <event-type name="PerformanceKeys" class="com.algoTrader.vo.PerformanceKeysVO"/>
    <event-type name="MaxDrawDown" class="com.algoTrader.vo.MaxDrawDownVO"/>

    <auto-import import-name="com.algoTrader.enumeration.TransactionType"/>
    <auto-import import-name="com.algoTrader.stockOption.StockOptionUtil"/>
    <auto-import import-name="com.algoTrader.util.LookupUtil"/>
    <auto-import import-name="com.algoTrader.util.DateUtil"/>
    <auto-import import-name="com.algoTrader.util.RoundUtil"/>
    <auto-import import-name="com.algoTrader.util.DrawDownUtil"/>

    <auto-import import-name="com.algoTrader.entity.*"/>
    <auto-import import-name="java.lang.*"/>
    <auto-import import-name="java.math.*"/>
    <auto-import import-name="java.text.*"/>
    <auto-import import-name="java.util.*"/>

    <plugin-aggregation-function name="ema" function-class="com.algoTrader.util.ExponentialMovingAverageFunction"/>

    <variable name="var_simulation" type="boolean" initialization-value="false"/>
    <variable name="var_isin" type="string" initialization-value="CH0008616382"/>
    <variable name="var_intrest" type="double" initialization-value="0.0015"/>

    <variable name="var_events_per_day" type="long" initialization-value="500"/>

    <variable name="var_macd_fast" type="int" initialization-value="88"/>
    <variable name="var_macd_slow" type="int" initialization-value="183"/>
    <variable name="var_macd_signal" type="int" initialization-value="70"/>
    <variable name="var_macd_weight" type="double" initialization-value="2.3"/>

    <!-- BEAR MARKET / CALL FOCUSED -->
    <variable name="var_call_k_fast_days" type="double" initialization-value="2.70"/>
    <variable name="var_call_k_slow_days" type="double" initialization-value="0.98"/>
    <variable name="var_call_d_slow_days" type="double" initialization-value="1.80"/>

    <variable name="var_call_enabled" type="boolean" initialization-value="false"/>
    <variable name="var_call_vola_period" type="double" initialization-value="0"/>
    <variable name="var_call_trigger" type="double" initialization-value="0"/>

    <!-- BULL MARKET / PUT FOCUSED -->
    <variable name="var_put_k_fast_days" type="double" initialization-value="3.20"/>
    <variable name="var_put_k_slow_days" type="double" initialization-value="0.86"/>
    <variable name="var_put_d_slow_days" type="double" initialization-value="0.52"/>

    <variable name="var_put_enabled" type="boolean" initialization-value="false"/>
    <variable name="var_put_vola_period" type="double" initialization-value="0"/>
    <variable name="var_put_trigger" type="double" initialization-value="0"/>

    <engine-settings>
        <defaults>
            <threading>
                <internal-timer enabled="false" msec-resolution="100"/>
            </threading>
            <expression udf-cache="false"/>
            <execution prioritized="true"/>
        </defaults>
    </engine-settings>

</esper-configuration>
