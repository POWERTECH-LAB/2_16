<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="${serviceName.toLowerCase()}ConfigParams" class="ch.algotrader.config.spring.CustomConfigParamsFactoryBean" >
        <property name="global" ref="configParams"/>
        <property name="resource">
            <value>classpath:/conf-${artifactId}.properties</value>
        </property>
    </bean>

    <bean id="${serviceName.toLowerCase()}Engine" class="ch.algotrader.esper.EngineFactoryBean">
        <property name="strategyName" value="${serviceName.toUpperCase()}"/>
        <property name="configResource" value="esper-${artifactId}.cfg.xml"/>
        <property name="configParams" ref="${serviceName.toLowerCase()}ConfigParams"/>
        <property name="initModules" value="${artifactId}"/>
    </bean>

    <!-- Creating Bean of Service Class -->
    <bean id="${serviceName.toLowerCase()}Service" class="${package}.${serviceName}Service" autowire="byName" />

    <!-- ActiveMQ queue for startegy specific messages -->
    <bean id="strategyQueue" class="org.apache.activemq.command.ActiveMQQueue">
        <constructor-arg value="${serviceName.toUpperCase()}.QUEUE" />
    </bean>

</beans>
