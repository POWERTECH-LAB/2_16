<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Creating Bean of Service Class -->
    <bean id="${serviceName.toLowerCase()}Service" class="${package}.${serviceName}Service" autowire="byName" />

    <!-- ActiveMQ queue for startegy specific messages -->
    <bean id="strategyQueue" class="org.apache.activemq.command.ActiveMQQueue">
        <constructor-arg value="${serviceName.toUpperCase()}.QUEUE" />
    </bean>

</beans>
